# vim: ft=sh
# shellcheck shell=bash

test -d "/opt/rbenv" && RBENV_ROOT="/opt/rbenv"
test -d "$HOME/.rbenv" && RBENV_ROOT="$HOME/.rbenv"
export RBENV_ROOT

[[ -n "$RBENV_ROOT" ]] && PATH="$RBENV_ROOT/bin:$PATH"

_has-rbenv() {
    type rbenv >/dev/null 2>&1
}

if _has-rbenv; then
    eval "$(rbenv init -)"
    export PATH
fi

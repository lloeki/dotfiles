__set_bash_ps1() {

    # load color vars
    source "$DOTFILES_BASH_DIR/ansi_colors"

    # colorized:
    PS1=" ${B}[${UC}\u@\h ${G}\$(__tpwd)${B}]${UC}\\$ ${NONE}"
}

__set_bash_ps1
unset __set_bash_ps1

